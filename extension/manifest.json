{
    "manifest_version": 3,
    "name": "MailShield Phishing Guard",
    "version": "1.1.0",
    "description": "Protects your browsing by showing website trust scores and highlighting malicious links in Gmail.",
    "permissions": [
        "storage",
        "activeTab",
        "tabs"
    ],
    "host_permissions": [
        "https://mail.google.com/*",
        "http://localhost:8000/*",
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://mail.google.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ]
        }
    ],
    "icons": {
        "48": "icon.png",
        "128": "icon.png"
    }
}