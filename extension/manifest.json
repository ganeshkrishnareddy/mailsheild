{
    "manifest_version": 3,
    "name": "MailShield Phishing Guard",
    "version": "1.0.0",
    "description": "Protects your Gmail from phishing by highlighting malicious links and verifying senders.",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "https://mail.google.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://mail.google.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ]
        }
    ],
    "icons": {
        "48": "icon.png",
        "128": "icon.png"
    }
}