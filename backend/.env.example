# ===========================================
# MailShield Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# Application
APP_NAME=MailShield
APP_ENV=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production

# Server
HOST=0.0.0.0
PORT=8000
FRONTEND_URL=http://localhost:3000

# Database (SQLite by default)
DATABASE_URL=sqlite+aiosqlite:///./mailshield.db

# Google OAuth 2.0
# Get these from Google Cloud Console
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/callback

# Gmail API Scopes (DO NOT CHANGE - minimal required)
GMAIL_SCOPES=https://www.googleapis.com/auth/gmail.readonly,https://www.googleapis.com/auth/gmail.modify

# Telegram Bot
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Encryption Key for Token Storage (generate with: openssl rand -hex 32)
TOKEN_ENCRYPTION_KEY=your-32-byte-hex-encryption-key

# Optional: Twilio for WhatsApp
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_NUMBER=
